package org.apius.messaging.atom;

import org.restlet.data.MediaType;
import org.restlet.ext.atom.Entry;
import org.restlet.ext.atom.Text;
import org.springframework.beans.BeansException;
import org.springframework.context.ApplicationContext;
import org.springframework.context.ApplicationContextAware;

public class AtomMessageBuilder implements ApplicationContextAware{
    
    private ApplicationContext appCxt;
    
    public Entry createEntry() {
        Entry entry = (Entry) appCxt.getBean("atomEntry");
        entry.setIgnoringExtraWhitespaces(true);
        
        return entry;
    }
    
    public Text createText(String content) {
        Text text = (Text) appCxt.getBean("atomText");
        text.setContent(content);
        
        return text;
    }
    
    public Text createText(MediaType type) {
        Text text = (Text) appCxt.getBean("atomText");
        text.setType(type);
        
        return text;
    }
    
    public Text createText(MediaType type, String content) {
        Text text = (Text) appCxt.getBean("atomText");
        text.setContent(content);
        text.setType(type);
        
        return text;
    }

    @Override
    public void setApplicationContext(ApplicationContext appCxt) throws BeansException {
        this.appCxt = appCxt;
    }
    
}
