package org.apius.messaging.atom;

import org.restlet.data.MediaType;
import org.restlet.data.Reference;
import org.restlet.ext.atom.Content;
import org.restlet.ext.atom.Entry;
import org.restlet.ext.atom.Link;
import org.restlet.ext.atom.Relation;
import org.restlet.ext.atom.Text;
import org.springframework.beans.BeansException;
import org.springframework.context.ApplicationContext;
import org.springframework.context.ApplicationContextAware;

public class AtomMessageBuilder implements ApplicationContextAware {
    
    private ApplicationContext appCxt;
    private Entry entry = (Entry) appCxt.getBean("atomEntry");
    private Text text = (Text) appCxt.getBean("atomText");
    private Link link = (Link) appCxt.getBean("atomLink");
    
    public Entry createEntry() {
        entry.setIgnoringExtraWhitespaces(true);
        
        return entry;
    }
    
    public Text createText(String content) {
        text.setContent(content);
        
        return text;
    }
    
    public Text createText(MediaType type) {
        text.setType(type);
        
        return text;
    }
    
    public Text createText(MediaType type, String content) {
        text.setContent(content);
        text.setType(type);
        
        return text;
    }
    
    public Link createLink(String title, String href, Relation rel) {
        link.setTitle(title);
        Reference ref = (Reference) appCxt.getBean("reference");
        ref.setPath(href);
        link.setHref(ref);
        link.setRel(rel);
        
        return link;
    }
    
    public Content createContent() {
        Content content = (Content) appCxt.getBean("atomContent");
        
        return content;
    }
    
    @Override
    public void setApplicationContext(ApplicationContext appCxt) throws BeansException {
        this.appCxt = appCxt;
    }
    
}
