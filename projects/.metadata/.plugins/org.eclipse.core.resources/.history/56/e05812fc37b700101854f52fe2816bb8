package org.apius.messaging.atom;

import org.restlet.data.MediaType;
import org.restlet.ext.atom.Entry;
import org.restlet.ext.atom.Text;
import org.springframework.beans.BeansException;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.ApplicationContext;
import org.springframework.context.ApplicationContextAware;

public class AtomProtocolBeansFactory implements ApplicationContextAware{
    
    @Autowired
    private ApplicationContext ctx;
    
    public Entry createEntry() {
        Entry entry = (Entry) ctx.getBean("atomEntry");
        
        return entry;
    }
    
    public Text createText(String content) {
        Text text = (Text) ctx.getBean("atomText");
        text.setContent(content);
        
        return text;
    }
    
    public Text createText(MediaType type) {
        Text text = (Text) ctx.getBean("atomText");
        text.setType(type);
        
        return text;
    }
    
    public Text createText(MediaType type, String content) {
        Text text = (Text) ctx.getBean("atomText");
        text.setContent(content);
        text.setType(type);
        
        return text;
    }

    @Override
    public void setApplicationContext(ApplicationContext ctx) throws BeansException {
        this.ctx = ctx;
    }
    
}
