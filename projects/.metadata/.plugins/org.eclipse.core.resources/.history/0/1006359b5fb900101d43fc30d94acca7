package org.apius.messaging.atom;

import org.restlet.data.MediaType;
import org.restlet.data.Reference;
import org.restlet.ext.atom.Content;
import org.restlet.ext.atom.Entry;
import org.restlet.ext.atom.Link;
import org.restlet.ext.atom.Relation;
import org.restlet.ext.atom.Text;
import org.restlet.representation.Representation;

public class AtomMessageBuilder {
    
    private Entry entry;
    private Text text;
    private Link link;
    private Reference ref;
    private Content content;
    
    public Entry createEntry() {
        
        return entry;
    }
    
    public Text createText(String content) {
        text.setContent(content);
        
        return text;
    }
    
    public Text createText(MediaType type) {
        text.setType(type);
        
        return text;
    }
    
    public Text createText(MediaType type, String content) {
        text.setContent(content);
        text.setType(type);
        
        return text;
    }
    
    public Link createLink(String title, String href, Relation rel) {
        link.setTitle(title);
        ref.setPath(href);
        link.setHref(ref);
        link.setRel(rel);
        
        return link;
    }
    
    public Content createContent() {
        return content;
    }
    
    public Content createContent(MediaType mediaType, Representation inlineContent) {
        content.setInlineContent(inlineContent);
        content.setExternalType(MediaType.APPLICATION_XML);
        
        return content;
    }
    
    public void setEntry(Entry entry) {
        this.entry = entry;
    }
    
    public void setText(Text text) {
        this.text = text;
    }
    
    public void setLink(Link link) {
        this.link = link;
    }
    
    public void setRef(Reference ref) {
        this.ref = ref;
    }
    
    public void setContent(Content content) {
        this.content = content;
    }
    
}
